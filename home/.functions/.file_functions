 echo "implement me!"
}

# List open processes ordered by it's number of open files
function psbyfc {
  ps -ef |awk '{ print $2 }'  |tail -n +2  |while read pid; do echo "$pid$(lsof -p $pid |wc -l)"; done  |sort -r -n -k 2  |while read pid count; do echo "$pid$count$(ps -o command= -p $pid)"; done
}


function resetxcodepath {
  # Re-occouring problem with a brew installation that causes xcode path to need to be reset.
  # https://stackoverflow.com/questions/21488778/library-not-loaded-usr-local-opt-readline-lib-libreadline-6-2-dylib
  #https://github.com/Homebrew/legacy-homebrew/issues/42223
  sudo xcode-select -s /Library/Developer/CommandLineTools
}
